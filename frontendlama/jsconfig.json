{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.js", "**/*.vue", "**/*.ts"]
}
